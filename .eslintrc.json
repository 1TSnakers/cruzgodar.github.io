{
    "env": {
        "browser": true,
        "es2021": true,
		"node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
	"ignorePatterns": [
		"**/*.min.*",
		"**/solver.js"
	],
    "rules": {
        "indent": [
            "error",
            "tab",
			{ "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
		"no-unused-vars": [
			"error",
			{ "args": "after-used" }
		]
	}
}