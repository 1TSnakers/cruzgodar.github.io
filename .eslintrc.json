{
    "env": {
        "browser": true,
        "es2021": true,
		"node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
	"ignorePatterns": [
		"**/*.min.*",
		"/scripts/three.*",
		"/scripts/anime.*",
		"/debug/*",
		"/projects/wilson/*",
		"/applets/calcudoku-generator/scripts/solver.*",
		"/applets/sudoku-generator/scripts/solver.*",
		"/applets/wilsons-algorithm/scripts/random-walk.*"
	],
    "rules": {
        "indent": [
            "error",
            "tab",
			{ "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
		"no-unused-vars": [
			"error",
			{ "args": "after-used" }
		],
		"prefer-const": [
			"error",
			{ "destructuring": "any"}
		]
	}
}