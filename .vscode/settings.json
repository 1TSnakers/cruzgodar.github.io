{
	"prettier.enable": false,
	"files.exclude": {
		"**/*.min.*": true,
		"**/android-icon*": true,
		"**/apple-icon*": true,
		"**/favicon*": true,
		"**/ms-icon*": true,
		"/scripts/anime.js": true,
		"/scripts/three.js": true
	},
	"editor.wordWrap": "bounded",
	"editor.wordWrapColumn": 128,
	"prettier.requireConfig": true,
	"editor.formatOnSave": false,
	"editor.codeActionsOnSave": {

	},
	"emeraldwalk.runonsave": {

		"commands": [
			{
				"match": ".*",
				"cmd": "node ${workspaceFolder}/build/build.mjs -t"
			}
		]
	}
}
