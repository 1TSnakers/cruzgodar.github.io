{
	"prettier.enable": false,
	"files.exclude": {
		"**/*.min.*": true,
		"**/android-icon*": true,
		"**/apple-icon*": true,
		"**/data.html": true,
		"**/favicon*": true,
		"**/index.html": true,
		"**/ms-icon*": true,
		"/scripts/anime.js": true,
		"/scripts/three.js": true,
		"/scripts/wilson.mjs": true
	},
	"editor.wordWrap": "off",
	"editor.wordWrapColumn": 128,
	"prettier.requireConfig": true,
	"editor.formatOnSave": false,
	"editor.codeActionsOnSave": {

	},
	"emeraldwalk.runonsave": {
		"autoClearConsole": true,
		"shell": "/bin/zsh",
		"commands": [
			{
				"match": ".*",
				"cmd": "bun ${workspaceFolder}/build/build.mjs"
			}
		]
	},
	"editor.maxTokenizationLineLength": 200000,
}
